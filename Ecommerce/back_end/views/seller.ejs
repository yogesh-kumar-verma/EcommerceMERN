    ></script>

    <title>Home</title>
  </head>
  <style>
    .float {
      position: fixed;
      width: 60px;
      height: 60px;
      bottom: 3rem;
      right: 4rem;
      background-color: rgb(78, 112, 185);
      color: #fff;
      border-radius: 50px;
      text-align: center;
      box-shadow: 2px 2px 3px #999;
      z-index: 1;
    }
  </style>
  <body>
    <%- include('partials/header', {name: name ,isSeller:isSeller}); %>
    <br />
    <br />
    <div id="popup" style="position: sticky; top: 4rem; z-index: 1"></div>

    <button class="btn btn-primary btn-lg float" onclick="addProductPopUp()">
      +
    </button>

    <div class="d-flex row" id="trans" style="z-index: 0">
      <% products.forEach((value)=>{ %>
      <div class="col-sm-12 col-md-5 col-lg-3">
        <%-include('partials/addproduct', {data:value }); %>
      </div>

      <% }) %>
    </div>
    <%if(products.length>7){%>

    <a
      href="/seller/<%=parseInt(page)+1%>"
      class="my-4 text-center btn btn-lg btn-warning"
      >Load more</a
    >
    <%}%>
    <button
      class="btn btn-danger btn-lg m-2"
      data-toggle="modal"
      data-target="#exampleModal"
    >
      Add in Bulk
    </button>
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
  
          
              
              <input type="file" name="csvdata" id="csvdata"   required>
               
              <div class="modal-footer">
                <button
                type="button"
                class="btn btn-secondary"
                data-dismiss="modal"
                >
                Close
              </button>
              <button type="button"   class="btn btn-primary"   data-dismiss="modal" onclick="posptCsvDate()">submit</button>
            </div>
  
        </div>
      </div>
    </div>
    <script>
      function posptCsvDate(){
        const formData = new FormData();
        var csvdata = document.getElementById("csvdata");
// formData.append(
//   "data",
//   JSON.stringify({ task: value, iscompleted: false, id: null })
// );
formData.append("csvdata", csvdata.files[0]);
fetch("/product/postcsv", {
      method: "POST",
